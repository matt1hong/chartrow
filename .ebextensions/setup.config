packages:
  yum:
    libjpeg-turbo-devel: []
    postgresql95-devel: []

commands:
  01_node_install:
    cwd: /tmp
    test: '[ ! -f /usr/bin/node ] && echo "node not installed"'
    command: 'yum install -y nodejs --enablerepo=epel'
  02_node_update:
    cwd: /tmp
    test: '[ ! -f /usr/bin/n ] && echo "node not updated"'
    command: 'npm install -g n && n stable'

container_commands:
  01_npm_build:
    command: 'npm install && npm run prod'